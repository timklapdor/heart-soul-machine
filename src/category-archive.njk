---
pagination:
  data: categories
  size: 1
  alias: category
permalink: "categories/{{ category | slug }}/"
eleventyComputed:
  posts: "{{ collections[category] }}"
layout: layouts/base.njk
---

<h1>Category: {{ category }}</h1>

<ul>
{% for post in posts %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
  </li>
{% endfor %}
</ul>